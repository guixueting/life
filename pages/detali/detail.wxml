<view>
    <!-- 轮播 -->
    <view>
        <swiper class="swi" autoplay="{{true}}" interval="5000" duration="1000" circular="{{true}}">
            <swiper-item wx:for="{{shuju.images}}" wx:key="id">
                <image src="{{item}}" />
            </swiper-item>
        </swiper>
    </view>
    <!-- 介绍 -->
    <view class="jieshao">
        <text class="shop-name">{{shuju.name}}</text>
        <text class="shop-tel">电话：{{shuju.phone}}</text>
        <text class="shop-address">地址：{{shuju.address}}</text>
        <text class="shop-time">营业时间：{{shuju.businessHours}}</text>
    </view>
    <!-- 评论 -->
    <view class="pinglun">
        <view wx:for="{{shuju.comments}}" wx:key="id" class="item">
            <text class="name">{{ item.name }}</text>
            <text class="date">{{ item.date }}</text>
            <text class="rating">{{ item.rating }}</text>
            <text class="content">{{ item.content }}</text>
            <view class="images">
            <!-- 注意：评论里的图片这样写不能显示 -->
            <!-- "http://p0.meituan.net/w.h/shaitu/4ffbaec3f82fe3b4240aedb22fee22e5267105.jpg" “w.h”要自己指定宽高-->
            <!-- 小程序没有过滤器要用wxs代替 imgutil.size(v) }}使用Wxs-->
            <!-- 图片预览：preview()大图显示 data-src={{item}}传参 data-images修改后的图片页码-->
                <image wx:for="{{ item.images }}" bindtap="preview" 
                data-images="{{ imgutil.sizeArr(item.images) }}" 
                data-src="{{ imgutil.size(v) }}"
                 wx:key="unique" wx:for-item="v" src='{{ imgutil.size(v) }}'></image>
            </view>
        </view>
    </view>

    <wxs module="imgutil">
     //处理图片 ，替换图片地址中参数，一个一个处理                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                        
    var size=function(url){
        return url.replace("w.h",'100.100')
    }
    //处理图片数组 urls 遍历urls当数组中每一个元素改变了 再返回
    var sizeArr=function(urls){
        for(var i=0;i<urls.length;i++){
            urls[i]=urls[i].replace("w.h","400.400")
        }
        return urls
    }
    module.exports={
        size:size
        sizeArr:sizeArr
    }
    </wxs>
</view>